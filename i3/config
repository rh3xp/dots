client.background       #ffffff

#---------------------------------------------------------------------------------------------------
#OTHER STUFF...
#---------------------------------------------------------------------------------------------------

# Set background wallpaper
exec_always --no-startup-id feh --bg-max ~/Pictures/wallpapers/space.png

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%   #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%   #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle         #mute sound

# Brightness -> xbacklight
bindsym XF86MonBrightnessUp exec "xbacklight -inc 20; notify-send 'brightness up'"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 20; notify-send 'brightness down'"

# Brightness -> light
#bindsym XF86MonBrightnessDown exec light -U 10
#bindsym XF86MonBrightnessUp exec light -A 10

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#rofi
bindsym $mod1+d exec rofi -show run -font "Space Mono 10"

# rofi theme selector
bindsym control+mod1+r exec --no-startup-id rofi-theme-selector

#dmenu
bindsym $mod+d exec dmenu_run -b -p 'Search:' -nf '#707880' -sf '#52bbb7' -nb '#1d1f21' -sb '#1d1f21'
#bindsym $mod+d exec "ytfzf -D"

#for smooth transitions
exec --no-startup-id compton -f

#startups
exec_always --no-startup-id dunst
exec_always --no-startup-id megasync
exec_always --no-startup-id mailspring
exec_always --no-startup-id octopi-notifier
exec_always --no-startup-id nm-applet
#exec_always --no-startup-id blueberry-tray
exec_always --no-startup-id blueman-applet

#powermenu
bindsym Control+$mod1+Delete exec $HOME/.i3/scripts/shutdown_menu

#application shortcuts
bindsym $mod+Shift+Return exec dolphin
bindsym $mod+Shift+o exec opera
bindsym $mod+Shift+b exec firefox
bindsym $mod+Print exec spectacle

#i3 shortcuts
# Cycle through workspaces
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# change workspace
bindsym $mod+$mod1+Left workspace prev
bindsym $mod+$mod1+Right workspace next

hide_edge_borders smart

# so that popups dont do fullscreen
popup_during_fullscreen smart

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

bindsym $mod1+Shift+d exec "$HOME/.local/bin/DogeHouse-1.0.69.AppImage &"

